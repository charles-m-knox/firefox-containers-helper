{
  "name": "firefox-containers-helper",
  "version": "0.2.0",
  "description": "",
  "scripts": {
    "test": "jest --coverage",
    "build": "rm -rf dist && webpack",
    "lint": "eslint ./src",
    "pkg": "web-ext build -s ./dist --overwrite-dest"
  },
  "author": "firefox-containers-helper",
  "license": "AGPL-3.0-or-later",
  "devDependencies": {
    "@types/firefox-webext-browser": "^120.0.4",
    "@types/jest": "^29.5.14",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "copy-webpack-plugin": "^11.0.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.4.2",
    "typescript": "^5.7.2",
    "web-ext": "^8.3.0",
    "webpack": "^5.75.0",
    "webpack-cli": "^4.10.0"
  },
  "eslintConfig": {
    "env": {
      "webextensions": true,
      "browser": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "root": true
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "printWidth": 120,
    "quoteProps": "as-needed",
    "semi": true,
    "singleAttributePerLine": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.ts$": [
        "ts-jest",
        {}
      ]
    }
  },
  "repository": {
    "url": "https://github.com/charles-m-knox/firefox-containers-helper"
  },
  "packageManager": "pnpm@8.14.0+sha1.bb42032ff80dba5f9245bc1b03470d2fa0b7fb2f"
}
